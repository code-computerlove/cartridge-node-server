			</div>
		</div>

		<div class="content-block">
			<div class="styleguide__section">
				<h2 class="styleguide__section-title">Colour Pallet</h2>
				<div class="color-list">
					{{#each colors }}
						<div class="color-item">
							<span class="color-item__color color-item__color--white" style="background-color: {{this}}"></span>
							<span class="color-item__title">{{this}}</span>
						</div>
					{{/each}}
				</div>
			</div>
		</div>

		<div class="styleguide__section">
			<h2 class="styleguide__section-title">12 column grid all widths</h2>
			<section class="section grid styleguide__grid">
				<div class="grid__row">
					{{#repeat 12}}
						{{>grid/grid gridRef='col--1/12' gridItemClass='styleguide__grid-item' content='col--1/12'}}
					{{/repeat}}
				</div>
				<div class="grid__row">
					{{#repeat 6}}
						{{>grid/grid gridRef='col--1/6' gridItemClass='styleguide__grid-item' content='col--1/6'}}
					{{/repeat}}
				</div>
				<div class="grid__row">
					{{#repeat 4}}
						{{>grid/grid gridRef='col--1/4' gridItemClass='styleguide__grid-item' content='col--1/4'}}
					{{/repeat}}
				</div>
				<div class="grid__row">
					{{#repeat 3}}
						{{>grid/grid gridRef='col--1/3' gridItemClass='styleguide__grid-item' content='col--1/3'}}
					{{/repeat}}
				</div>
				<div class="grid__row">
					{{#repeat 2}}
						{{>grid/grid gridRef='col--1/2' gridItemClass='styleguide__grid-item' content='col--1/2'}}
					{{/repeat}}
				</div>
				<div class="grid__row">
					{{>grid/grid gridRef='col--7/12' gridItemClass='styleguide__grid-item' content='col--7/12'}} {{>grid/grid gridRef='col--5/12' gridItemClass='styleguide__grid-item' content='col--5/12'}}
				</div>
				<div class="grid__row">
					{{>grid/grid gridRef='col--2/3' gridItemClass='styleguide__grid-item' content='col--2/3'}} {{>grid/grid gridRef='col--1/3' gridItemClass='styleguide__grid-item' content='col--1/3'}}
				</div>
				<div class="grid__row">
					{{>grid/grid gridRef='col--3/4' gridItemClass='styleguide__grid-item' content='col--3/4'}} {{>grid/grid gridRef='col--1/4' gridItemClass='styleguide__grid-item' content='col--1/4'}}
				</div>
				<div class="grid__row">
					{{>grid/grid gridRef='col--5/6' gridItemClass='styleguide__grid-item' content='col--5/6'}} {{>grid/grid gridRef='col--1/6' gridItemClass='styleguide__grid-item' content='col--1/6'}}
				</div>
				<div class="grid__row">
					{{>grid/grid gridRef='col--11/12' gridItemClass='styleguide__grid-item' content='col--11/12'}} {{>grid/grid gridRef='col--1/12' gridItemClass='styleguide__grid-item' content='col--1/12'}}
				</div>
			</section>
		</div>
	</div>
</div>
<!-- / end site markup -->
{{> footer JS=true}}
